<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingBottom="12dp"
    android:layout_marginBottom="12dp"
    android:background="@color/colorWhite"
    >
    <ImageView
        android:id="@+id/item_imagen"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/item_nombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="Park Plaza Wstemsir London"
        android:maxLines="2"
        android:textSize="16sp"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/item_imagen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_precio_total"
        />
    <TextView
        android:id="@+id/item_precio_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="6dp"
        android:text="Pago Total: S/ 355"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/item_imagen"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/item_opcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        android:text="3 dÃ­as y 2 noches"
        android:textAppearance="?attr/textAppearanceCaption"
        app:layout_constraintTop_toBottomOf="@+id/item_nombre"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
